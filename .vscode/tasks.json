{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gradle build",
            "type": "shell",
            "command": "gradlew build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "gradle test",
            "type": "shell",
            "command": "gradlew test",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "gradle run",
            "type": "shell",
            "command": "gradlew bootRun"
        },
        {
            "label": "gradle dep-refresh",
            "type": "shell",
            "command": "gradlew build --refresh-dependencies"
        },
        {
            "label": "gradle clean build",
            "type": "shell",
            "command": "gradlew clean build"
        },
        {
            "label": "gradle clean test",
            "type": "shell",
            "command": "gradlew clean test"
        }
    ]
}